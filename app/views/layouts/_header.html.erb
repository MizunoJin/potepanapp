<header class="navbar navbar-fixed-top navbar-inverse navbar-expand-lg bg-light navbar-light">
  <div class="container">
    <nav class="navbar navbar-light navbar-expand-md bg-light">
      <%= link_to "Incostagram", root_path, id: "logo" %>
      <% if logged_in? %>
        <li class="search-li">
          <%= form_tag(root_path, :method => 'get', class: "search form-inline my-2 my-lg-0") do %>
            <%= text_field_tag :search, params[:search], {class: "search-form header-search form-control mr-sm-2", placeholder: "検索"} %>
            <button type="submit btn btn-outline-success my-2 my-sm-0">
              <i class="fas fa-search"></i>
            </button>
          <% end %>
        </li>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#responsiveMenu" aria-controls="responsiveMenu" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-bars navbar-toggler-icon"></i>
      </button>
      <div class="collapse navbar-collapse" id="responsiveMenu">
        <ul class="nav navbar-nav navbar-right mr-auto mt-2 mt-lg-0">
          <!-- wide-menu -->
          <li class="nav-item">
            <%= link_to root_path do %>
              <i class="fas fa-home"></i>
            <% end %>
          </li>
          <% if logged_in? %>
            <li class="nav-item">
              <%= link_to users_path do %>
                <i class="fas fa-users"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "/microposts/new" do %>
                <i class="fas fa-upload"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to notifications_path do %>
                <i class="fas fa-bell"></i>
              <% end %>
            </li>
            <li class="dropdown nav-item">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= gravatar_for(current_user, size: 20) %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "プロフィール", current_user %></li>
                <li><%= link_to "設定", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "ログアウト", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to login_path do %>
                <i class="fas fa-sign-in-alt"></i>
              <% end %>
            </li>
          <% end %>
          
          <!-- narrow-menu -->
          <li class="nav-item-narrow">
             <% if logged_in? %>
                <%= form_tag(root_path, :method => 'get', class: "search form-inline-narrow my-2 my-lg-0") do %>
                <%= text_field_tag :search, params[:search], {class: "search-form-narrow header-search form-control mr-sm-2", placeholder: "検索"} %>
                <button type="submit btn btn-outline-success my-2 my-sm-0">
                  <i class="fas fa-search"></i>
                </button>
                <% end %>
              <% end %>
            <%= link_to root_path do %>
              <i class="fas fa-home"></i>
              <soan>ホーム</span>
            <% end %>
          </li>
          <% if logged_in? %>
            <li class="nav-item-narrow">
              <%= link_to users_path do %>
                <i class="fas fa-users"></i>
                <soan>ユーザー</span>
              <% end %>
            </li>
            <li class="nav-item-narrow">
              <%= link_to "/microposts/new" do %>
                <i class="fas fa-upload"></i>
                <soan>投稿</span>
              <% end %>
            </li>
            <li class="nav-item-narrow">
              <%= link_to notifications_path do %>
                <i class="fas fa-bell"></i>
                <soan>通知</span>
              <% end %>
            </li>
            <li class="dropdown nav-item-narrow">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= gravatar_for(current_user, size: 20) %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "プロフィール", current_user %></li>
                <li><%= link_to "設定", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "ログアウト", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item-narrow">
              <%= link_to login_path do %>
                <i class="fas fa-sign-in-alt"></i>
                <span>ログイン</span>
              <% end %>
            </li>
          <% end %>
            
        </ul>
      </div>
    </nav>
  </div>
</header>




