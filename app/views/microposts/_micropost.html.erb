<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to "#{micropost.user.name} / #{micropost.user.username}", micropost.user %></span>
  <%= link_to(micropost_path(micropost), class: "content") do %>
    <%= image_tag micropost.image.variant(gravity: :center, resize:"500x500^", crop:"500x500+0+0").processed if micropost.image.attached? %>
    <%= micropost.content %>
    <div id="like-btn-<%= micropost.id %>" class="like">
      <%= render 'likes/like', micropost: micropost %>
    </div>
  <% end %>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前
    <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                                       data: { confirm: "削除しますか？" } %>
    <% end %>
  </span>
</li>